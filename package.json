{
  "name": "bazaar-front",
  "version": "1.0.0",
  "description": "Flower bouquet online store",
  "homepage": "https://konopat.github.io/bazaar-front",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "dev": "webpack serve --mode development --open",
    "build": "npm run sitemap:generate && NODE_ENV=production webpack --mode production",
    "build:analyze": "ANALYZE=true NODE_ENV=production webpack --mode production",
    "preview": "npm run build && npx serve dist",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "predeploy": "npm run clean && npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:dev": "npm run predeploy && npm run deploy"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@types/ol": "^6.5.3",
    "localforage": "^1.10.0",
    "ol": "^10.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.18.0",
    "workbox-expiration": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@babel/register": "^7.23.7",
    "@babel/runtime": "^7.24.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.5.3",
    "jsdom": "^26.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
